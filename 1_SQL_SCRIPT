1.4_DCL_Users.sql

CREATE USER 'librarian'@'%' IDENTIFIED BY 'Lib2024!';
GRANT SELECT, INSERT, UPDATE, DELETE ON library_sdg4.* TO 'librarian'@'%';
CREATE USER 'viewer'@'%' IDENTIFIED BY 'Viewer2024!';
GRANT SELECT ON library_sdg4.* TO 'viewer'@'%';
FLUSH PRIVILEGES;
